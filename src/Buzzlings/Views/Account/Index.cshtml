@{
    ViewData["Title"] = "Account";
}

<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="text-center">
        <div class="custom-panel-wrapper mt-2" style="max-width: 400px; width: 100%; margin: auto;">
            <div class="card custom-panel" style="width: 100%;">
                <div class="card-body p-1">
                    <b>Account</b>
                </div>
            </div>
        </div>
        <div class="custom-panel-wrapper mt-2" style="max-width: 220px; width: 100%; margin: auto;">
            <div class="card custom-panel" style="max-width: 220px; width: 100%; margin: auto;">
                <div class="card-body p-3">
                    <div class="gap-2">
                        <a asp-controller="Account" asp-action="ChangeUsername" class="btn btn-dark w-100 mb-2">Change username</a>
                        <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-dark w-100 mb-2">Change password</a>
                        <a asp-controller="Account" asp-action="ChangeHiveName" class="btn btn-dark w-100 mb-2">Change hive name</a>
                        <a asp-controller="Account" asp-action="DeleteHive" class="btn btn-dark w-100 mb-2">Delete hive</a>
                        <a asp-controller="Account" asp-action="DeleteAccount" class="btn btn-dark w-100">Delete account</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="custom-panel-wrapper mt-2" style="max-width: 400px; width: 100%; margin: auto;">
            <div class="card custom-panel" style="width: 100%;">
                <div class="card-body p-1">
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-dark w-48">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>