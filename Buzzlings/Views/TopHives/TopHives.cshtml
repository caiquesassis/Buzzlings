@{
    ViewData["Title"] = "Buzzlings - Top Hives";
}

@model IEnumerable<Buzzlings.Data.Models.TopHive>

<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="text-center">
        <div class="custom-panel-wrapper mt-2" style="max-width: 400px; width: 100%; margin: auto;">
            <div class="card custom-panel" style="width: 100%;">
                <div class="card-body p-1">
                    <b>Top Hives</b>
                </div>
            </div>
        </div>
        <div class="custom-panel-wrapper mt-2" style="max-width: 700px; width: 100%; margin: auto;">
            <div class="card custom-panel" style="max-width: 700px; width: 100%; margin: auto;">
                <div class="card-body p-2">
                    <div class="table-container" style="max-height: 1000px">
                        <table class="fixed-table">
                            <thead>
                                <tr>
                                    <th>Position</th>
                                    <th>User</th>
                                    <th>Hive</th>
                                    <th>Age</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    List<string> medals = ["🥇", "🥈", "🥉"];

                                    for(int i = 0; i < Model.Count(); i++)
                                    {
                                        <tr>
                                            <td>@medals.ElementAtOrDefault(i)@(i + 1)</td>
                                            <td>@Model.ElementAt(i).User!.UserName</td>
                                            <td>@Model.ElementAt(i).HiveName</td>
                                            <td>@Model.ElementAt(i).HiveAge years</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="custom-panel-wrapper mt-2" style="max-width: 400px; width: 100%; margin: auto;">
            <div class="card custom-panel" style="width: 100%;">
                <div class="card-body p-1">
                    <a asp-controller="TopHives" asp-action="Back" class="btn btn-dark w-48">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>