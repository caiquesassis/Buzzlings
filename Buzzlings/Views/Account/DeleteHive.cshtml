@{
    ViewData["Title"] = "Buzzlings - Account";
}

@model Buzzlings.Data.Models.User

<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 100vh;">
    @if(Model.HiveId is not null)
    {
        <div class="text-center">
            <div class="custom-panel-wrapper mt-2" style="max-width: 400px; width: 100%; margin: auto;">
                <div class="card custom-panel" style="width: 100%;">
                    <div class="card-body p-1">
                        <b>Delete hive</b>
                    </div>
                </div>
            </div>
            <div class="custom-panel-wrapper mt-2" style="max-width: 400px; width: 100%; margin: auto;">
                <div class="card custom-panel" style="width: 100%;">
                    <div class="card-body p-3">
                        <div class="text-center mb-3">
                            Are you sure you want to delete your hive?
                        </div>
                        <form method="post" asp-controller="Account" asp-action="DeleteHive">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="custom-panel-wrapper mt-2" style="max-width: 400px; width: 100%; margin: auto;">
                <div class="card custom-panel" style="width: 100%;">
                    <div class="card-body p-1">
                        <a asp-controller="Account" asp-action="Back" class="btn btn-dark w-48">Back</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center">
            <div class="custom-panel-wrapper mt-2" style="max-width: 400px; width: 100%; margin: auto;">
                <div class="card custom-panel" style="width: 100%;">
                    <div class="card-body p-1">
                        <b>Delete hive</b>
                    </div>
                </div>
            </div>
            <div class="custom-panel-wrapper mt-2" style="max-width: 400px; width: 100%; margin: auto;">
                <div class="card custom-panel" style="width: 100%;">
                    <div class="card-body p-3">
                        <div class="text-center">
                            You haven't created a hive yet!
                        </div>
                    </div>
                </div>
            </div>
            <div class="custom-panel-wrapper mt-2" style="max-width: 400px; width: 100%; margin: auto;">
                <div class="card custom-panel" style="width: 100%;">
                    <div class="card-body p-1">
                        <a asp-controller="Account" asp-action="Back" class="btn btn-dark w-48">Back</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>