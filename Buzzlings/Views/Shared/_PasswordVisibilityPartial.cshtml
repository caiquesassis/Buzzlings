<!-- Bootstrap Icons CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<!-- JavaScript for password visibility toggle -->
<script>
    const passwordToggles = document.getElementsByClassName("js-togglePassword");
    const passwordFields = document.getElementsByClassName("js-password");
    const toggleIcons = document.getElementsByClassName("js-toggleIcon");

    Array.from(passwordToggles).forEach(function(toggle, index) 
    {
        toggle.addEventListener("click", function() 
        {
            // Toggle password field type between "password" and "text"
            const type = passwordFields[index].type === "password" ? "text" : "password";
            passwordFields[index].type = type;

            // Change the icon based on visibility state
            if (type === "password") 
            {
                toggleIcons[index].classList.remove("bi-eye");
                toggleIcons[index].classList.add("bi-eye-slash");
            } 
            else 
            {
                toggleIcons[index].classList.remove("bi-eye-slash");
                toggleIcons[index].classList.add("bi-eye");
            }
        });
    });
</script>